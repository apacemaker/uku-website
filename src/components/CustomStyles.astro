---
// Supports weights 100-900
import '@fontsource-variable/montserrat';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Montserrat Variable';
    --aw-font-serif: 'Montserrat Variable';
    --aw-font-heading: 'Montserrat Variable';

    --aw-color-primary: rgb(47, 153, 238);
    --aw-color-secondary: rgb(132, 47, 238);
    --aw-color-accent: rgb(47, 58, 238);

    --aw-color-text-heading: rgb(3, 13, 20);
    --aw-color-text-default: rgb(3, 13, 20);
    --aw-color-text-muted: rgba(3, 13, 20, 0.77);
    --aw-color-bg-page: rgb(240, 248, 255);

    --aw-color-bg-page-dark: rgb(3, 6, 32);

    ::selection {
      background-color: rgb(47, 58, 238);
      color: snow;
    }
  }

  .dark {
    --aw-font-sans: 'Montserrat Variable';
    --aw-font-serif: 'Montserrat Variable';
    --aw-font-heading: 'Montserrat Variable';
    --aw-color-primary: rgb(47, 153, 238);
    --aw-color-secondary: rgb(132, 47, 238);
    --aw-color-accent: rgb(47, 58, 238);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229, 236, 246);
    --aw-color-text-muted: rgba(229, 236, 246, 0.77);
    --aw-color-bg-page: rgb(3, 6, 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
